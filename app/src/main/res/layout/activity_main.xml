<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_about_me"
    android:fillViewport="true"
    android:background="@color/colorPrimaryDark"
    tools:context="edu.neu.madcourse.entingwu.MainMenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <Button
                android:text="@string/button_label_1"
                android:id="@+id/button1"
                android:onClick="displayAbout"
                style="@style/ButtonDefaultStyle" />

            <Button
                android:text="@string/button_label_2"
                android:id="@+id/button2"
                android:onClick="generateError"
                style="@style/ButtonDefaultStyle" />

            <Button
                android:text="@string/button_label_3"
                android:id="@+id/button3"
                android:onClick="testDictionary"
                style="@style/ButtonDefaultStyle" />

            <Button
                android:text="@string/button_label_10"
                android:id="@+id/button10"
                style="@style/ButtonDefaultStyle"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
