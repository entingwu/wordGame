<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tile_background"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/small_board_padding"
    tools:context=".wordgame.GameActivity">

    <ImageButton android:id="@+id/wg_small1" style="@style/WgTileButton"
        android:layout_column="0" android:layout_row="0"/>
    <ImageButton android:id="@+id/wg_small2" style="@style/WgTileButton"
        android:layout_column="1" android:layout_row="0"/>
    <ImageButton android:id="@+id/wg_small3" style="@style/WgTileButton"
        android:layout_column="2" android:layout_row="0"/>
    <ImageButton android:id="@+id/wg_small4" style="@style/WgTileButton"
        android:layout_column="0" android:layout_row="1"/>
    <ImageButton android:id="@+id/wg_small5" style="@style/WgTileButton"
        android:layout_column="1" android:layout_row="1"/>
    <ImageButton android:id="@+id/wg_small6" style="@style/WgTileButton"
        android:layout_column="2" android:layout_row="1"/>
    <ImageButton android:id="@+id/wg_small7" style="@style/WgTileButton"
        android:layout_column="0" android:layout_row="2"/>
    <ImageButton android:id="@+id/wg_small8" style="@style/WgTileButton"
        android:layout_column="1" android:layout_row="2"/>
    <ImageButton android:id="@+id/wg_small9" style="@style/WgTileButton"
        android:layout_column="2" android:layout_row="2"/>
</GridLayout>